/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {

    /*
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    BAM TO FASTQ or vice versa
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    */

    withName: '.*:CONVERT_INPUT_BAMS:.*' {
        publishDir = [
            enabled: false
        ]
    }

    withName: '.*:CONVERT_INPUT_FASTQS:.*' {
        publishDir = [
            enabled: false
        ]
    }

    withName: '.*:CONVERT_INPUT_BAMS:SAMTOOLS_FASTQ' {
        ext.prefix = { "${input}" }
        ext.args   = '-T \\*'
    }

    withName: '.*:CONVERT_INPUT_BAMS:SAMTOOLS_IMPORT' {
        ext.args = '-T \\*'
    }

    withName: '.*:CONVERT_INPUT_FASTQS:SAMTOOLS_FASTQ' {
        ext.prefix = { "${input}" }
        ext.args   = '-T \\*'
    }

    withName: '.*:CONVERT_INPUT_FASTQS:SAMTOOLS_IMPORT' {
        ext.args = '-T \\*'
    }
}
