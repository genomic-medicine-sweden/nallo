process {
    
    withName: 'PREPARE_GENS_INPUTS:MOSDEPTH' {
        ext.args = { [
            '-n',
            '--fast-mode',
            '--by 100',
        ].join(' ') }
    }

    withName: 'PREPARE_GENS_INPUTS:BCFTOOLS_CONCAT' {
        ext.args = {[
            '--allow-overlaps',
            '--output-type z',
            '--write-index=tbi'
        ].join(' ')}
    }
}