
singularity {
    enabled = true
    autoMounts = true
    cacheDir = "/home/jakob/data/containers"
    // runOptions = '--bind /fs1/ --bind /local/ --bind /mnt/beegfs/ --bind /fs2/'
}

process {
    withLabel: process_medium {
        cpus = 4
        memory = 4.GB
        time = 4.h
    }

    withName: '.*:PREPARE_GENS_INPUTS:MOSDEPTH' {
        ext.args = { [
            '--n',
            '--fast-mode',
            '--by 100',
        ].join(' ') }
    }
}
