nextflow_workflow {

    name "Test Workflow PHASING"
    script "../main.nf"
    config "./nextflow.config"
    workflow "PHASING"

    test "1 sample - SNVs only" {
        when {
            workflow {
                """
                input[0] = [
                    [ id : 'test' ],
                    file(params.pipelines_testdata_base_path + '/testdata/HG002_deepvariant.vcf.gz' checkIfExists: true)
                ]
                input[1] = [
                    [ id : 'test' ],
                    file(params.pipelines_testdata_base_path + '/testdata/HG002_deepvariant.vcf.gz.tbi' checkIfExists: true)
                ]
                input[2] = [ [], [] ]
                input[3] = [ [], [] ]
                input[4] = [
                    [ id : 'test' ],
                    file(params.pipelines_testdata_base_path + '/testdata/HG002_PacBio_Revio.bam', checkIfExists: true),
                    file(params.pipelines_testdata_base_path + '/testdata/HG002_PacBio_Revio.bam.bai', checkIfExists: true)
                ]
                input[5] = [
                    [ id:'genome'],
                    file(params.modules_testdata_base_path + '/genomics/homo_sapiens/genome/genome.fasta', checkIfExists: true)
                ]
                input[6] = [
                    [ id:'genome'],
                    file(params.modules_testdata_base_path + '/genomics/homo_sapiens/genome/genome.fasta.fai', checkIfExists: true)
                ]
                input[7] = false
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
