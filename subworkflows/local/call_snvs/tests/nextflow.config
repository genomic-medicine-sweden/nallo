process {
    withName: 'CALL_SNVS:DEEPVARIANT_RUNDEEPVARIANT' {
        ext.prefix = { intervals ? "${meta.id}_${intervals}_deepvariant" : "${meta.id}_deepvariant" }
        ext.args   = {
            [
                '--model_type WGS',
                "--sample_name=${meta.id}",
                '-vcf_stats_report=False',
            ].join(' ')
        }
    }

    withName: 'CALL_SNVS:GLNEXUS' {
        ext.args = '--config DeepVariant_unfiltered'
    }

    withName: 'CALL_SNVS:BCFTOOLS_CONCAT' {
        ext.prefix = { "${meta.id}_concat" }
        ext.args   = [
            '--no-version',
            '--allow-overlaps',
        ].join(' ')
    }

    withName: 'CALL_SNVS:BCFTOOLS_NORM_MULTISAMPLE' {
        ext.prefix = { "${meta.id}_norm_multisample" }
        ext.args   = [
            '--no-version',
            '-m -',
            '--output-type z',
            '--write-index=csi',
            '-w 10000',
        ].join(' ')
    }

    withName: 'CALL_SNVS:BCFTOOLS_NORM_SINGLESAMPLE' {
        ext.prefix = { "${meta.id}_norm_singlesample" }
        ext.args   = [
            '--no-version',
            '-m -',
            '-w 10000',
            '--output-type z',
            '--write-index=tbi',
        ].join(' ')
    }

    withName: 'CALL_SNVS:ADD_FOUND_IN_TAG' {
        ext.prefix = { "${meta.id}_found_in" }
        ext.args   = '--no-version'
        ext.args2  = [
            '--output-type z',
            '--no-version',
        ].join(' ')
    }
}
