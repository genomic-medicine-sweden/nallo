process {
    withName: 'LONGPHASE:.*' {
        publishDir = [
            enabled: false,
        ]
    }

    withName: 'LONGPHASE:BCFTOOLS_SORT' {
        ext.args = [
            '--output-type z',
            '--write-index=tbi'
        ].join(' ')
    }

    withName: 'LONGPHASE:BCFTOOLS_MERGE' {
        ext.args = [
            '--output-type z',
            '--write-index=tbi',
            '--force-single'
        ].join(' ')
    }

    withName: 'LONGPHASE:LONGPHASE_PHASE' {
        ext.prefix = { "${meta.id}_phased" }
        ext.args = [
            '--pb',
            '--indels'
        ].join(' ')
    }

    withName: 'LONGPHASE:LONGPHASE_HAPLOTAG' {
        ext.prefix = { "${meta.id}_haplotagged" }
    }

}
