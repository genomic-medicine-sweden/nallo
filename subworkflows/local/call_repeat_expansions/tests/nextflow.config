process {
    withName: 'CALL_REPEAT_EXPANSIONS:TRGT_MERGE' {
        ext.args = '--output-type z --force-single --no-version'
    }
    withName: 'CALL_REPEAT_EXPANSIONS:BCFTOOLS_SORT_TRGT' {
        ext.prefix = { "${meta.id}_sorted" }
        ext.args = '--output-type z --write-index=tbi'
    }
    withName: 'CALL_REPEAT_EXPANSIONS:TRGT' {
        ext.args = { "--sample-name ${meta.id}" }
    }
    withName: 'CALL_REPEAT_EXPANSIONS:BCFTOOLS_INDEX' {
        ext.args = "--tbi"
    }
    withName: 'CALL_REPEAT_EXPANSIONS:STRDUST' {
        ext.args = "--sorted"
    }
    withName: 'CALL_REPEAT_EXPANSIONS:BCFTOOLS_MERGE_STRDUST' {
        ext.args = "--write-index=tbi --output-type z --no-version --force-single"
    }
    withName: 'CALL_REPEAT_EXPANSIONS:ADD_FOUND_IN_TAG_STRDUST' {
        ext.args2 = [
            '--output-type z',
            '--write-index=tbi',
            '--no-version'
        ].join(' ')
    }
}
